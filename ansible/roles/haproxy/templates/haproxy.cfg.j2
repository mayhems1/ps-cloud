global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

listen web
    bind :80
    {% for item in groups['apache'] %}
    server apache{{ loop.index }} {{ item }}:80 check
    {% endfor %}
